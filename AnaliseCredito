var
limite: inteiro
compra: inteiro
resultado: inteiro

inicio

limite <- 1000

escreval("Insira o valor da compra: ")
leia(compra)

resultado <- limite - compra

SE (resultado < 0) ENTAO

escreval("Compra Recusada")

SENAO
escreval("Compra Aprovada!")

FIMSE

